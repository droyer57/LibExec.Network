@inherits DefaultComponent

<input type="text" class="textbox @ClassName" style="@Style" placeholder="@Placeholder" @bind="CurrentValue"
       @bind:event="oninput" disabled="@(Disabled ?? Enabled == false)" @attributes="AdditionalAttributes"/>

@code {

    [Parameter]
    public string? Placeholder { get; set; }

    [Parameter]
    public string? Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }

    [Parameter]
    public bool? Disabled { get; set; }

    [Parameter]
    public bool? Enabled { get; set; }

    private string? CurrentValue
    {
        get => Value;
        set
        {
            Value = value;
            ValueChanged.InvokeAsync(Value);
        }
    }

}