{
  "devDependencies": {
    "tailwindcss": "^3.3.2"
  },
  "scripts": {
    "dev": "dotnet watch",
    "css:dev": "tailwindcss -i ./Styles/app.css -o ./wwwroot/styles/app.css --watch",
